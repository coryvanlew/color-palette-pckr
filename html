<!DOCTYPE html>
<html>
<head>
  <title>Color Palette Generator</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
    }
    #color-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
    }
    .color-box {
      width: 100px;
      height: 100px;
      margin: 10px;
      display: inline-block;
      cursor: pointer;
    }
    .color-code {
      font-size: 14px;
    }
  </style>
</head>
<body>
  <h1>Color Palette Generator</h1>
  <div id="color-container"></div>
  <button id="generate-palette">Generate Palette</button>
  <script>
    let mayanColorBank = [
      // Your initial colors here...
    ];

    function displayColors() {
      const colorContainer = document.getElementById('color-container');
      colorContainer.innerHTML = '';

      mayanColorBank.forEach(color => {
        const colorBox = document.createElement('div');
        colorBox.className = 'color-box';
        colorBox.style.backgroundColor = color;
        colorBox.addEventListener('click', () => {
          removeColor(color);
          displayColors();
        });

        const colorCode = document.createElement('div');
        colorCode.className = 'color-code';
        colorCode.textContent = color;
        
        colorBox.appendChild(colorCode);
        colorContainer.appendChild(colorBox);
      });
    }

    function addColor() {
      const colorInput = prompt('Enter a color code (e.g., #RRGGBB):');
      if (colorInput) {
        mayanColorBank.push(colorInput);
        displayColors();
      }
    }

    function removeColor(color) {
      const index = mayanColorBank.indexOf(color);
      if (index !== -1) {
        mayanColorBank.splice(index, 1);
      }
    }

    document.getElementById('generate-palette').addEventListener('click', () => {
      const colorPalettes = [];

      for (let i = 0; i < 16; i++) {
        const randomIndex = Math.floor(Math.random() * mayanColorBank.length);
        colorPalettes.push(mayanColorBank[randomIndex]);
      }

      alert('Generated Palette:\n\n' + colorPalettes.join('\n'));
    });

    displayColors();
  </script>
</body>
</html>
